<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddProductActivity">


        <ImageView
            android:id="@+id/imagV_product"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_search"
            android:src="@drawable/icon_add_photo"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edtxt_name_product"
            android:layout_marginTop="20dp"
            android:hint="Name Product"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagV_product"
            app:layout_constraintStart_toStartOf="parent"
            />

    <EditText
        android:id="@+id/edtxt_description_prod"
        android:layout_marginTop="10dp"
        android:hint="Description"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_name_product"
        app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
            android:id="@+id/edtxt_ingredients"
            android:layout_marginTop="10dp"
            android:hint="Ingredients"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtxt_description_prod"
            app:layout_constraintStart_toStartOf="parent"

            />





    <EditText
            android:id="@+id/edtxt_Nutrition"
            android:layout_marginTop="10dp"
            android:hint="Nutrition"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtxt_ingredients"
            app:layout_constraintStart_toStartOf="parent"
            />



    <EditText
            android:id="@+id/edtxt_date_expiration"
            android:layout_marginTop="10dp"
            android:hint="Date Expiration"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtxt_Nutrition"
            app:layout_constraintStart_toStartOf="parent"
            />



    <EditText
        android:id="@+id/edtxt_prix"
        android:layout_marginTop="10dp"
        android:hint="Prix"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_date_expiration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edtxt_quantity"
        android:layout_marginTop="10dp"
        android:hint="Quantity"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_prix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
            android:id="@+id/txtv_save"
            android:layout_width="303dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/dark_green"
            android:background="@drawable/textview_background"
            android:gravity="center"
            android:text="save"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtxt_quantity"/>



</androidx.constraintlayout.widget.ConstraintLayout>
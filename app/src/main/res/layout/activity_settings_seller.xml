<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsSellerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:background="@color/dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="53dp"
            android:src="@drawable/icon_back"
            app:layout_constraintEnd_toStartOf="@+id/tv_Settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Settings"
            android:layout_marginTop="50dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/update_logo_seller"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/profile_picture"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtv_email_seller"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/update_logo_seller"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editt_Email_seller"
        android:layout_marginTop="15dp"
        android:hint="manishuxuid@gmail.fr"
        android:inputType="textEmailAddress"
        android:background="@drawable/background_search"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtv_email_seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtv_phone_seller"
        android:layout_marginTop="15dp"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editt_Email_seller"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editt_phone_seller"
        android:layout_marginTop="15dp"
        android:hint="0745621789"
        android:inputType="phone"
        android:background="@drawable/background_search"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtv_phone_seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtv_address_seller"
        android:layout_marginTop="15dp"
        android:text="Address"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editt_phone_seller"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editt_Address_seller"
        android:layout_marginTop="15dp"
        android:hint="spl. independentei nr 290"
        android:background="@drawable/background_search"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/txtv_address_seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_update"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_background"
        android:text="Update"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_green"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/editt_Address_seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
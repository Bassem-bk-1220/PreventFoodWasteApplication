<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdatePrixActivity">

    <EditText
        android:id="@+id/edtxt_prix"
        android:layout_marginTop="70dp"
        android:hint="Prix"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edtxt_quantity"
        android:layout_marginTop="20dp"
        android:hint="Quantity"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_prix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtv_update_data"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/dark_green"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="update"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_quantity"/>

</androidx.constraintlayout.widget.ConstraintLayout>
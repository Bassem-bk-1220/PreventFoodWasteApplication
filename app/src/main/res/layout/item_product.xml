<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_offre"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp"
    android:background="@drawable/shape_rectangle_radius">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtv_Orange_juice"
        android:layout_marginTop="10dp"
        android:text="Orange juice"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_logo"
        />

    <TextView
        android:id="@+id/tv_Expiration_date"
        android:layout_marginTop="20dp"
        android:text="Expiration date: "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_Orange_juice"
        app:layout_constraintStart_toEndOf="@id/img_logo"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_marginTop="20dp"
        android:text="30/04/2022"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_Orange_juice"
        app:layout_constraintStart_toEndOf="@id/tv_Expiration_date"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_search"
        android:backgroundTint="@color/dark_green"
        android:gravity="center"
        android:text="12 lei"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtv_Orange_juice"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>